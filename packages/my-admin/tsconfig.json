{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "allowJs": false,
    "noEmit": false,
    "incremental": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "jsx": "react-jsx",
    "paths": {
      "@/gql": ["./src/gql/graphql.ts"]
    },
    "types": ["vitest/globals", "node"]
  },
  "exclude": ["**/node_modules", "**/.*/", "dist", "build", "_release"]
}
