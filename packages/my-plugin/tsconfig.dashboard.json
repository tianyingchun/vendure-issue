{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/gql": ["./src/gql/graphql.ts"],
      "@/vdb/*": ["../../node_modules/@vendure/dashboard/src/lib/*"]
    },
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schemas": [
          {
            "name": "admin-api",
            "schema": "http://localhost:3001/admin-api",
            "tadaOutputLocation": "./src/gql/graphql-env.d.ts"
          }
        ]
      }
    ]
  },
  "include": ["src/dashboard/**/*", "src/gql/**/*.ts"]
}
