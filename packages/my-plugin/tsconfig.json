{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "allowJs": false,
    "noEmit": false,
    "incremental": true,
    "types": ["vitest/globals", "node"]
  },
  "exclude": [
    "**/node_modules",
    "**/.*/",
    "dist",
    "build",
    "_release",
    ".vendure-dashboard-temp/**",
  ],
  "include": ["src/dashboard/**/*", "src/gql/**/*.ts"]

}
