{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "allowJs": false,
    "jsx": "react-jsx",
    "noEmit": false,
    "incremental": true,
    "types": ["vitest/globals", "node"],
    "paths": {
      "@hyperse/my-common": ["../my-common/src/index.js"]
    }
  },
  "exclude": [
    "**/node_modules",
    "**/.*/",
    "dist",
    "build",
    "_release",
    "src/**/dashboard/*",
    "src/gql/**/*.ts"
  ]
}
