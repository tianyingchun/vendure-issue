{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "allowJs": false,
    "noEmit": false,
    "incremental": true,
    "types": ["vitest/globals", "node"],
    "paths": {
      "@hyperse/my-plugin": ["../../packages/my-plugin/src/index.js"],
      "@/gql": ["./src/gql/graphql.ts"],
      "@/vdb/*": ["../../node_modules/@vendure/dashboard/src/lib/*"]
    }
  },
  "exclude": [
    "**/node_modules",
    "**/.*/",
    "dist",
    "build",
    "_release",
    "src/**/dashboard/*",
    "src/gql/**/*.ts"
  ]
}
